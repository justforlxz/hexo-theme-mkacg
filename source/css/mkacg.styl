
body
  margin 0
  background-image: url(/assets/background.jpg)
  background-size: 100%
  background-repeat: no-repeat
  background-attachment: fixed

#menu-outer
  background-color: transparent
  overflow: hidden
  position: fixed
  right: 0
  top: 0
  width: 100%
  backdrop-filter: blur(10px)
  border-bottom: 1px solid
  border-color: black
  z-index: 1
  #menu-inner
    a:hover
      background-color: #66ccff
    a
      display: inline-block
      height: 50px
      line-height: 50px
      width: 80px
      text-align: center
      text-decoration: none

#content-outer
  padding-top: 50px

#recent-posts
  overflow: hidden
  margin: 0 auto
  padding-left: 10px
  padding-right: 10px
  background-color: transparent
  border-radius: 10px
  width: 620px
  .recent-post-item
    float: left
    background-color: rgba(255, 255, 255, 0.6)
    backdrop-filter: blur(15px)
    width: 600px
    min-height: 80px
    margin-top: 5px
    margin-bottom: 5px
    padding: 10px;
    border-radius: 10px
    a
      text-decoration: none
    #recent-post-seeall
      padding: 5px
      background-color: transparent
    #recent-post-seeall:hover
      border-radius: 10px
      background-color: rgba(255, 255, 255, 0.6)
  .recent-post-item:first-child
    margin-top: 10px
  .recent-post-item:last-child
    margin-bottom: 10px
